{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Next",
  "version": "1.0.0",
  "identifier": "com.boris.next",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "http://localhost:2026",
    "devUrl": "http://localhost:2026"
  },
  "app": {
    "windows": [
      {
        "title": "Next - Focus on the Right Thing",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "targets": "all",
    "resources": {
      "resources/*": "./"
    },
    "windows": {
      "nsis": {
        "installerHooks": "nsis-hooks.nsi"
      }
    }
  }
}
